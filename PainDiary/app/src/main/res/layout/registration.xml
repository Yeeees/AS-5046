<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">
<AbsoluteLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:text="Create a new account for yourself!"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:id="@+id/textView3"
        android:layout_x="27dp"
        android:layout_y="14dp" />

    <EditText
        android:layout_width="137dp"
        android:layout_height="wrap_content"
        android:id="@+id/username_reg"
        android:layout_x="165dp"
        android:layout_y="62dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="User Name"
        android:id="@+id/textView4"
        android:layout_x="30dp"
        android:textSize="20sp"
        android:layout_y="70dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Full Name"
        android:id="@+id/textView5"
        android:layout_x="30dp"
        android:textSize="20sp"
        android:layout_y="170dp" />

    <EditText
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:id="@+id/first_name_reg"
        android:hint="FirstName"
        android:layout_x="131dp"
        android:layout_y="161dp" />

    <EditText
        android:layout_width="93dp"
        android:layout_height="wrap_content"
        android:id="@+id/last_name_reg"
        android:hint="LastName"
        android:layout_x="229dp"
        android:layout_y="161dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Password"
        android:id="@+id/passwd_input"
        android:textSize="20sp"
        android:layout_x="30dp"
        android:layout_y="120dp" />

    <EditText
        android:layout_width="137dp"
        android:layout_height="wrap_content"
        android:id="@+id/passwd_reg"
        android:layout_x="165dp"
        android:layout_y="110dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Address"
        android:id="@+id/textView6"
        android:textSize="20sp"
        android:layout_x="30dp"
        android:layout_y="220dp" />

    <EditText
        android:layout_width="216dp"
        android:layout_height="wrap_content"
        android:id="@+id/address_reg"
        android:layout_x="131dp"
        android:layout_y="210dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Date of birth"
        android:textSize="20sp"
        android:id="@+id/textView7"
        android:layout_x="30dp"
        android:layout_y="270dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="date"
        android:onClick="onDatePickClick"
        android:ems="10"
        android:id="@+id/dob_reg"
        android:layout_x="136dp"
        android:layout_y="258dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Height"
        android:id="@+id/textView8"
        android:layout_x="30dp"
        android:textSize="20sp"
        android:layout_y="320dp" />

    <EditText
        android:layout_width="46dp"
        android:layout_height="wrap_content"
        android:id="@+id/height_reg"
        android:layout_x="102dp"
        android:layout_y="308dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="cm"
        android:id="@+id/textView9"
        android:textSize="17sp"
        android:layout_x="153dp"
        android:layout_y="324dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Weight"
        android:id="@+id/textView10"
        android:textSize="20sp"
        android:layout_x="205dp"
        android:layout_y="320dp" />



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="kg"
        android:textSize="17sp"
        android:id="@+id/textView11"
        android:layout_x="321dp"
        android:layout_y="324dp" />

    <EditText
        android:layout_width="46dp"
        android:layout_height="wrap_content"
        android:id="@+id/weight_reg"
        android:layout_x="275dp"
        android:layout_y="308dp" />


    <RadioGroup
        android:id="@+id/genderGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="133dp"
        android:layout_y="368dp"
        android:orientation="horizontal">
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Male"
            android:textSize="20sp"
            android:id="@+id/male_reg"
            />
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Female"
            android:textSize="20sp"
            android:id="@+id/female_reg"
            />
    </RadioGroup>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Gender"
        android:id="@+id/textView12"
        android:textSize="20sp"
        android:layout_x="30dp"
        android:layout_y="370dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Occupation"
        android:id="@+id/textView13"
        android:textSize="20sp"
        android:layout_x="30dp"
        android:layout_y="420dp" />

    <EditText
        android:layout_width="142dp"
        android:layout_height="wrap_content"
        android:id="@+id/occupation_reg"
        android:layout_x="144dp"
        android:layout_y="408dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="GP name"
        android:textSize="20sp"
        android:id="@+id/textView14"
        android:layout_x="30dp"
        android:layout_y="470dp" />

    <EditText
        android:layout_width="92dp"
        android:layout_height="wrap_content"
        android:id="@+id/gpfname_reg"
        android:hint="FirstName"
        android:layout_x="146dp"
        android:layout_y="453dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Clinic Addr"
        android:textSize="20sp"
        android:id="@+id/textView15"
        android:layout_x="30dp"
        android:layout_y="506dp" />

    <EditText
        android:layout_width="195dp"
        android:layout_height="wrap_content"
        android:id="@+id/clinicaddr_reg"
        android:layout_x="146dp"
        android:layout_y="490dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Submit"
        android:id="@+id/submitBtn"
        android:layout_x="65dp"
        android:layout_y="559dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cancel"
        android:id="@+id/cancelBtn"
        android:layout_x="203dp"
        android:layout_y="559dp" />

    <EditText
        android:layout_width="92dp"
        android:layout_height="wrap_content"
        android:id="@+id/gplname_reg"
        android:hint="LastName"
        android:layout_x="247dp"
        android:layout_y="453dp" />


</AbsoluteLayout></ScrollView>